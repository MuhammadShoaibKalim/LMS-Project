{
    "compilerOptions": {
      "target": "ESNext",              // You can set this to "ES6" or another appropriate target.
      "module": "NodeNext",            // Use NodeNext for ESM module support.
      "moduleResolution": "NodeNext",   // Ensure this matches the module option.
      "outDir": "./dist",              // Optional: specify output directory for compiled files.
      "strict": true,                   // Optional: enable strict type-checking options.
      "esModuleInterop": true,          // Optional: enable interoperability between CommonJS and ES Modules.
      "skipLibCheck": true              // Optional: skip type checking of declaration files.
    },
    "include": ["src/**/*"],            // Specify the files to include.
    "exclude": ["node_modules"]         // Exclude the node_modules folder.
  }
  